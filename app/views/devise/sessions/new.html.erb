<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="mb-4">Log in</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-3">
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation" do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
        </div>
    </div>
    <div class="col-3">
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", required: true, autocomplete: "current-password" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="form-check mb-3">
          <%= form.check_box :remember_me, class: "form-check-input" %>
          <%= form.label :remember_me, class: "form-check-label" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="d-grid">
        <%= form.submit "Log in", class: "btn-custom" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
